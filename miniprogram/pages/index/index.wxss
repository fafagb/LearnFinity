.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding-bottom: 60px;
}

.chat-area {
  flex: 1;
  padding: 0 10px;
  overflow-y: scroll;
  box-sizing: border-box;
}

.messages {
  padding: 10px 0;
}

.message {
  margin-bottom: 10px;
}

.input-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 5px 10px;
   /* background-color: #f5f5f5;  */
  position: fixed;
  bottom: 46px;
  left: 0;
  right: 0;
  z-index: 998;
  width: 100%;
  box-sizing: border-box;
}

.input-area .input {

  width: calc(130% - 0px);
  height: 44px; /* 添加这一行 */
  margin-left: -9px;
  margin-right: 8px;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 5px;
  font-size: 18px;
  outline: none;
  box-sizing: border-box;
}

.send {
  width: 30px;
  height: 40px;

  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  margin-left: 0px;
}

